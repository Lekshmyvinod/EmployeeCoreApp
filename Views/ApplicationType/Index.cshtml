@model IEnumerable<EmployeeCoreApp.Models.ApplicationType>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a class="btn btn-info" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i> </a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info-square"></i> Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i> </a>
                        </td>

                    </tr>
                }
            }
        }

    </tbody>
</table>
